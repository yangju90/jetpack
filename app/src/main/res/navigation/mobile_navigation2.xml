<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation2"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="indi.mat.work.android.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="indi.mat.work.android.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="indi.mat.work.android.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" >
        <action
            android:id="@+id/action_nav_slideshow_to_nav_slideTask"
            app:destination="@id/nav_slideTask" />
    </fragment>
    <fragment
        android:id="@+id/nav_slideTask"
        android:name="indi.mat.work.android.ui.slideshow.SlideTaskFragment"
        android:label="fragment_slide_task"
        tools:layout="@layout/fragment_slide_task" >
        <action
            android:id="@+id/action_nav_slideTask_to_nav_slideItem"
            app:destination="@id/nav_slideItem" />
    </fragment>
    <fragment
        android:id="@+id/nav_slideItem"
        android:name="indi.mat.work.android.ui.slideshow.SlideItemFragment"
        android:label="fragment_slide_item"
        tools:layout="@layout/fragment_slide_item" />


</navigation>